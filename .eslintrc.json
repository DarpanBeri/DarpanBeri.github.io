{
  "env": {
    "browser": true,
    "es2021": true,
    "jquery": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "script"
  },
  "plugins": ["import", "promise"],
  "globals": {
    "gtag": "readonly"
  },
  "overrides": [
    {
      "files": ["**/*.test.js", "**/__tests__/**/*.js"],
      "env": {
        "jest": true
      }
    },
    {
      "files": ["jest.config.js"],
      "env": {
        "node": true
      }
    }
  ],
  "rules": {
    "no-unused-vars": [
      "warn",
      {
        "argsIgnorePattern": "^_",
        "varsIgnorePattern": "^_"
      }
    ],
    "no-undef": "warn",
    "eqeqeq": "error",
    "promise/always-return": "off",
    "promise/no-return-wrap": "off"
  }
}
