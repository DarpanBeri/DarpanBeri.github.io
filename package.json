{
  "name": "darpanberi.github.io",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint:eslint": "eslint --ext .js .",
    "lint:style": "stylelint \"assets/css/**/*.css\"",
    "lint:markdown": "markdownlint \"**/*.md\" --ignore node_modules --fix",
    "lint": "npm run lint:eslint && npm run lint:style && npm run lint:markdown",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "serve": "http-server -p 8080 -c-1 .",
    "validate:html": "html-validate --formatter stylish index.html",
    "check:links": "start-server-and-test 'npm run serve' http://localhost:8080 'linkinator http://localhost:8080 --recurse --skip \"^mailto:,^tel:,^javascript:,linkedin\\\\.com\"'",
    "check:a11y": "start-server-and-test 'npm run serve' http://localhost:8080 'axe http://localhost:8080 --exit'",
    "check-all": "npm run format:check && npm run lint && npm run test:coverage && npm run validate:html && npm run check:links"
  },
  "devDependencies": {
    "@html-validate/stylish": "^4.3.0",
    "@testing-library/dom": "^9.3.1",
    "eslint": "^8.57.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-promise": "^6.1.1",
    "html-validate": "^8.29.0",
    "http-server": "^14.1.1",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "linkinator": "^2.16.2",
    "lint-staged": "^15.2.8",
    "markdownlint": "^0.31.1",
    "markdownlint-cli": "^0.39.0",
    "@axe-core/cli": "^4.7.2",
    "prettier": "^3.2.5",
    "start-server-and-test": "^2.1.2",
    "stylelint": "^16.6.1",
    "stylelint-config-standard": "^36.0.0"
  },
  "lint-staged": {
    "**/*.{js,json,md}": [
      "prettier --write"
    ],
    "assets/css/**/*.css": [
      "prettier --write"
    ],
    "**/*.js": [
      "eslint --fix"
    ]
  }
}
